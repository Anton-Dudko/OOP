<h2><%= t('.creating a new campaign')%></h2>

<%= form_for @campaign, html: { multipart: true} do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field(:title, {:class => 'form-control'}) %>
  </div>
  <div class="form-group">
    <%= f.label :summary %>
    <%= f.text_field(:summary, {:class => 'form-control'}) %>
  </div>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.trix_editor :body, class: 'editor' %>
  </div>
  <div class="form-group">
    <%= f.file_field :image %>
  </div>
  <div class="form-group">
    <%= f.label :category_id %>
    <%= f.collection_select :category_id, Category.order(:name), :id, :name, { include_blank: true}, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :tags %>
    <%= f.text_field :all_tags, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :video %>
    <%= f.text_field(:video, {:class => 'form-control'}) %>
  </div>
  <div class="form-group">
    <%= f.label :aim %>
    <%= f.number_field(:aim, {:class => 'form-control'}) %>
  </div>
  <div class="form-group">
    <%= f.label :current %>
    <%= f.number_field(:current, {:class => 'form-control'}) %>
  </div>
  <div class="form-group">
    <%= f.submit t('.submit'), class: 'btn btn-primary' %>
  </div>
<% end %>
