<h1><%= t('.categories')%></h1>

<div class="buttons_panel">
  <p><%= link_to t('.add category'), new_category_path, class: "btn btn-primary" %></p>
  <section id="categories">
    <table class="table">
      <thead>
        <tr>
          <th>№</th>
          <th><%= t('.title')%></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each_with_index do |category, index| %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= category.name %></td>
            <td>
              <% if user_signed_in? %>
                <% if current_user.admin %>
                  <%= link_to t('.edit'), edit_category_path(category), class: "btn btn-outline-primary" %>
                  <%= link_to t('.delete'), category_path(category), method: :delete, data: { confirm: 'Вы уверены?' }, class: "btn btn-outline-danger" %>
                <% end %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </section>
</div>
