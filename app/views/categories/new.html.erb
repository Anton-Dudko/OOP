<h2><%= t('.creating a new category')%></h2>

<%= form_for @category do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field(:name, {:class => 'form-control'}) %>
  </div>
  <div class="form-group">
    <%= f.submit(t('.submit'), {:class => 'btn btn-primary'}) %>
  </div>
<% end %>
